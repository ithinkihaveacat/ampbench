{
  "name": "amp-toolbox-linter",
  "version": "0.0.8",
  "description": "A linter for AMP documents",
  "repository": "https://github.com/ampproject/ampbench/amp-toolbox-linter",
  "license": "Apache-2.0",
  "author": "Michael Stillwell <mjs@beebo.org>",
  "dependencies": {
    "amp-toolbox-cache-list": "^0.1.5",
    "amp-toolbox-cache-url": "^1.0.6",
    "amphtml-validator": "^1.0.23",
    "cheerio": "^1.0.0-rc.2",
    "commander": "^2.19.0",
    "debug": "^4.1.1",
    "escape-html": "^1.0.3",
    "node-fetch": "^2.3.0",
    "probe-image-size": "^4.0.0",
    "throat": "^4.1.0"
  },
  "engines": {
    "node": "8.x.x"
  },
  "scripts": {
    "//": "See README for more information about these scripts",
    "build": "tsc --module commonjs --target es2018 --esModuleInterop --noImplicitAny --strictNullChecks src/*.ts tests/*.ts",
    "test": "cd tests && for t in helper.js local.js network.js ; do ( test -e $t || $npm_execpath run build ) && ( node $t | tap-parser -t ) || exit 1 ; done ; exit 0",
    "lint": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "watch": "ls tsconfig.json tslint.json src/*.ts tests/*.ts | entr -c -s 'clear ; $npm_execpath run build ; date'",
    "package": "$npm_execpath run lint && pack build",
    "publish": "pack publish --any-branch"
  },
  "devDependencies": {
    "@pika/pack": "^0.3.6",
    "@pika/plugin-build-node": "^0.3.14",
    "@pika/plugin-build-types": "^0.3.14",
    "@pika/plugin-simple-bin": "^0.3.14",
    "@pika/plugin-ts-standard-pkg": "^0.3.14",
    "@types/cheerio": "^0.22.11",
    "@types/debug": "4.1.3",
    "@types/diff": "^4.0.2",
    "@types/escape-html": "0.0.20",
    "@types/nock": "^9.3.1",
    "@types/node-fetch": "^2.1.7",
    "diff": "^4.0.1",
    "nock": "^10.0.6",
    "prettier": "^1.16.4",
    "tap-parser": "^9.3.1",
    "typescript": "^3.3.4000"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "amplint"
        }
      ]
    ]
  },
  "prettier": {}
}
