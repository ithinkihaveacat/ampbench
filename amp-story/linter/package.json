{
  "name": "amp-toolbox-linter",
  "version": "0.0.1",
  "description": "A linter for AMP documents",
  "repository": "https://github.com/ampproject/ampbench/amp-story/linter",
  "license": "Apache-2.0",
  "author": "Michael Stillwell <mjs@beebo.org>",
  "dependencies": {
    "amp-toolbox-cache-list": "^0.1.3",
    "amp-toolbox-cache-url": "^1.0.5",
    "amphtml-validator": "^1.0.23",
    "cheerio": "^1.0.0-rc.2",
    "debug": "^4.1.1",
    "node-fetch": "^2.3.0",
    "probe-image-size": "^4.0.0",
    "throat": "^4.1.0"
  },
  "engines": {
    "node": "8.x.x"
  },
  "scripts": {
    "update-data": "cd tests && curl -sS --remote-name-all https://cdn.ampproject.org/v0/validator.js",
    "test": "cd tests && tsc --module commonjs && for t in *.js ; do node $t | tap-spec ; done && echo yes"
  },
  "devDependencies": {
    "@pika/pack": "^0.3.1",
    "@pika/plugin-build-node": "^0.3.10",
    "@pika/plugin-build-types": "^0.3.10",
    "@pika/plugin-simple-bin": "^0.3.10",
    "@pika/plugin-standard-pkg": "^0.3.10",
    "@types/cheerio": "^0.22.10",
    "@types/debug": "4.1.0",
    "@types/diff": "^4.0.1",
    "@types/nock": "^9.3.1",
    "@types/node-fetch": "^2.1.6",
    "diff": "^4.0.1",
    "nock": "^10.0.6",
    "tap-spec": "^5.0.0",
    "typescript": "^3.3.3"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "tests/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-types"
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "linter"
        }
      ]
    ]
  },
  "prettier": {}
}
